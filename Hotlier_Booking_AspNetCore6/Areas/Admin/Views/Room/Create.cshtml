@model RoomDtoForCreation

<div class="container mt-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center">Create Room</h2>
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group mb-2">
                    <label asp-for="RoomName" class="control-label">Room Name</label>
                    <input asp-for="RoomName" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="RoomPhotoUrl" class="control-label">Room Photo URL</label>
                    <input name="file" type="file" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="RoomDetail" class="control-label">Room Detail</label>
                    <textarea asp-for="RoomDetail" class="form-control"></textarea>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="RoomBed" class="control-label">Room Bed</label>
                    <input asp-for="RoomBed" class="form-control" type="number" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="RoomBath" class="control-label">Room Bath</label>
                    <input asp-for="RoomBath" class="form-control" type="number" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="RoomPrice" class="control-label">Room Price</label>
                    <input asp-for="RoomPrice" class="form-control" type="number" step="0.01" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="RoomAvailableDate" class="control-label">Available Date</label>
                    <input asp-for="RoomAvailableDate" class="form-control" type="date" />
                </div>
                <div class="form-group form-check mb-2">
                    <input asp-for="IsRoomActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsRoomActive" class="form-check-label">Is Active?</label>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>
